{
    "hosting":  {
                    "site": "sierrapainting",
                    "public":  "build/web",
                    "ignore":  [
                                   "firebase.json",
                                   "**/.*",
                                   "**/node_modules/**"
                               ],
                    "predeploy":  [
                                      "npm run predeploy:web"
                                  ],
                    "rewrites":  [
                                     {
                                         "source":  "**",
                                         "destination":  "/index.html"
                                     }
                                 ],
                    "headers":  [
                                    {
                                        "source": "/index.html",
                                        "headers": [
                                          { "key": "Cache-Control", "value": "no-cache" }
                                        ]
                                    },
                                    {
                                        "source": "**/*.html",
                                        "headers": [
                                          { "key": "Cache-Control", "value": "no-cache" }
                                        ]
                                    },
                                    {
                                        "source": "**/*.js",
                                        "headers": [
                                          { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
                                        ]
                                    },
                                    {
                                        "source": "flutter_service_worker.js",
                                        "headers": [
                                          { "key": "Cache-Control", "value": "no-store" }
                                        ]
                                    },
                                    {
                                        "source":  "**",
                                        "headers":  [
                                                        {
                                                            "key":  "X-Content-Type-Options",
                                                            "value":  "nosniff"
                                                        }
                                                    ]
                                    }
                                ]
                },
    "firestore":  {
                      "rules":  "firestore.rules",
                      "indexes":  "firestore.indexes.json"
                  },
    "storage":  {
                    "rules":  "storage.rules"
                },
    "functions":  [
                      {
                          "source":  "functions",
                          "codebase":  "default",
                          "runtime":  "nodejs20",
                          "predeploy": [
                              "npm run predeploy:functions"
                          ],
                          "ignore":  [
                                         "node_modules",
                                         ".git",
                                         "firebase-debug.log",
                                         "firebase-debug.*.log",
                                         "src/test"
                                     ]
                      }
                  ],
    "emulators":  {
                      "auth":  {
                                   "host":  "127.0.0.1",
                                   "port":  58547
                               },
                      "ui":  {
                                 "port":  4401,
                                 "enabled":  false
                             }
                  }
}
