{
  "hosting": {
    "site": "sierrapainting",
    "public": "build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self' data: blob: https:; script-src 'self' 'unsafe-inline' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://firebasestorage.googleapis.com https://lh3.googleusercontent.com; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https://*.googleapis.com https://*.gstatic.com https://*.firebaseio.com https://firestore.googleapis.com https://firebasestorage.googleapis.com https://www.google-analytics.com https://www.googletagmanager.com ws://localhost:* http://localhost:*; worker-src 'self' blob:; base-uri 'self'; object-src 'none'; frame-ancestors 'self'; manifest-src 'self';"
          },
          {
            "key": "X-Frame-Options",
            "value": "SAMEORIGIN"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          },
          {
            "key": "Permissions-Policy",
            "value": "geolocation=(self), camera=(), microphone=()"
          }
        ]
      },
      {
        "source": "**/*.js",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          }
        ]
      }
    ]
  },
  "emulators": {
    "singleProjectMode": true,
    "hub": {
      "host": "127.0.0.1",
      "port": 4400
    },
    "ui": {
      "enabled": true,
      "host": "127.0.0.1",
      "port": 4500
    },
    "hosting": {
      "host": "127.0.0.1",
      "port": 5000
    },
    "functions": {
      "host": "127.0.0.1",
      "port": 5001
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8080
    },
    "storage": {
      "host": "127.0.0.1",
      "port": 9199
    },
    "auth": {
      "host": "127.0.0.1",
      "port": 9099
    }
  },
  "functions": {
    "source": "./functions",
    "remoteSource": false,
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"],
    "endpoints": {
      "createLead": {
        "region": "us-east4",
        "minInstances": 0,
        "concurrency": 40,
        "timeoutSeconds": 30,
        "memory": "512MiB"
      },
      "healthCheck": {
        "region": "us-east4",
        "minInstances": 0,
        "concurrency": 5,
        "timeoutSeconds": 10,
        "memory": "256MiB"
      }
    }
  },
  "storage": {
    "rules": "(storage.rules)"
  },
  "firestore": {
    "database": "default",
    "location": "us-east4",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
