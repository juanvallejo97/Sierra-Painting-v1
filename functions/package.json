{
  "name": "functions",
  "description": "Cloud Functions for Sierra Painting",
  "scripts": {
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc --watch",
    "server": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "predeploy": "npm run build",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:rules": "jest --testPathPattern=test/rules.test.ts"
  },
  "engines": {
    "node": ">=18 <21"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/opentelemetry-cloud-trace-exporter": "^2.0.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/resources": "^1.19.0",
    "@opentelemetry/sdk-trace-base": "^2.1.0",
    "@opentelemetry/sdk-trace-node": "^1.19.0",
    "@opentelemetry/semantic-conventions": "^1.19.0",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.4.0",
    "node-fetch": "^2.7.0",
    "pdfkit": "^0.14.0",
    "stripe": "^16.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.6.2",
    "@types/node-fetch": "^2.6.9",
    "@types/pdfkit": "^0.13.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^9.37.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.5.4"
  },
  "private": true
}
