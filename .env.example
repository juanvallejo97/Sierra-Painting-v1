# Sierra Painting - Example Environment Configuration
# Copy to .env and fill in values for local development. Do NOT commit real secrets.
# The web build loads .env.public (public-safe). Keep secrets ONLY in .env or CI secrets.

# ========================
# FIREBASE (client-visible)
# ========================
# Usually compiled into firebase_options.dart via FlutterFire.
FIREBASE_PROJECT_ID=
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

# ========================
# ENVIRONMENT
# ========================
ENVIRONMENT=development
USE_EMULATORS=true
FIRESTORE_EMULATOR_PORT=8080
AUTH_EMULATOR_PORT=9099
FUNCTIONS_EMULATOR_PORT=5001
STORAGE_EMULATOR_PORT=9199

# ========================
# APP CHECK (web)
# ========================
# Public site key (safe to ship)
RECAPTCHA_V3_SITE_KEY=recaptcha: "YOUR_PUBLIC_RECAPTCHA_SITE_KEY"
# Turn on App Check (true in staging/prod)
ENABLE_APP_CHECK=true

# ========================
# OBSERVABILITY
# ========================
CRASHLYTICS_ENABLED=false
PERFORMANCE_MONITORING_ENABLED=true
DEBUG_LOGGING_ENABLED=true
# LOG_LEVEL=info

# ========================
# TESTING
# ========================
TEST_EMAIL=
TEST_PASS=
CI_HEADLESS=new

# ========================
# 3RD PARTY
# ========================
# Keep API keys only in .env (never in .env.public)
OPENAI_API_KEY=
