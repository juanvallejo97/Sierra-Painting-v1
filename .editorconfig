# EditorConfig for Sierra Painting
# Ensures consistent coding styles across different editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.dart]
indent_size = 2

[*.{ts,js}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{yaml,yml}]
indent_size = 2

[*.json]
indent_size = 2

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_size = 2
